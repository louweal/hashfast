{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "lib": ["ESNext", "DOM"],
        "jsx": "preserve",
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "types": ["@types/node", "nuxt"],
        "strict": false,
        "baseUrl": ".",
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"]
        },
        "noEmit": true
    },
    "exclude": ["node_modules", ".nuxt"],
    "include": ["**/*"]
}
